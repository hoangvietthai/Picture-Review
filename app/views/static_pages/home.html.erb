<div class="main-container">
  <header class="fullscreen-element no-pad centered-text  okconde home_fix">
    <div class="background-image-holder parallax-background overlay">
      <a href="#" class="background-image"> <%= image_tag "background.jpg" %></a>
    </div>

    <div class="container">
      <div class="row">
        <div class="dme col-md-12 text-center">
          <span class="text-white alt-font ok1">Painting Every Day</span>
          <h1 class="text-white">Each picture is a life worthy of humanity</h1>
          <p class="lead text-white">Welcome to Diamond Team</p>
        </div>
        <%= search_form_for @q, :url => url_for(:controller => "pictures", :action => "pictures_search") do |f| %>
          <div id="custom-search-input">
            <div class="input-group">
              <%= f.search_field :user_username_cont, class: "search-query search_username",
                placeholder: "Poster" %>
              <%= f.search_field :name_cont, class: "search-query search_picturename",
                placeholder: "Picture's name" %>
              <span class="input-group-btn">
                <%= f.submit "", class: "btn_search" %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </header>
</div>
<div style="background: white">
  <section class="popular">
  <div class="container">
    <div class="title text-center m-b-30">
      <h2>All painting and artwork</h2>
      <p class="lead">Enjoy the beauty of art</p>
    </div>
    <%= paginate @pictures, theme: "twitter-bootstrap-4" %>
    <div class="row">
      <% @pictures.each do |p| %>
        <div class="col-md-4 food-item">
          <div class="food-item-wrap">
            <div class="figure-wrap bg-image">
              <% if p.images? %>
                <%= image_tag p.images.url, class: "resize-image" %>
              <% end %>
                <div class="rating2 fa-show-picture" id="fa-show-picture" score = <%= p.average_rate %>>
                </div>
            </div>
            <div class="content">
              <h5><%= link_to p.name, picture_path(p) %></h5>
              <div class=""><%= p.category %></div>
              <div class="">Poster: <%= p.user.username %></div>
            
            </div>
            <div class="restaurant-block">
              <div class="left">
                <!-- <div class="pull-left">Description</div> -->
                <div class="pull-left right-text">
                  <span><%= truncate(p.description, length: 150, separator: " ") %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  </section>
</div>

<script>
    $('div#star-rating-design').raty({
        path: '/assets/',
        number: 5,
        score: function () {
            return $(this).attr('score');
        },
        scoreName: 'review[rating]',
        readOnly: false,
        starOn: 'star-on.png',
        half: true,
        starType: 'img',
        click: function (score) {
            var picture_id = $(this).attr('picture_id');
            $.ajaxSetup({
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                }
            });
            $.ajax({
                type: 'POST',
                url: '/rating_pictures/',
                dataType: 'json',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
                },
                data: {
                    design_rate: score,
                    picture_id: picture_id,
                },
                success: function (data) {
                    alert(data.message);
                },
                error: function (data) {
                    alert(data.message);
                }
            });
        }
    });
    $('div#star-rating-price').raty({
        path: '/assets/',
        number: 5,
        score: function () {
            return $(this).attr('score');
        },
        scoreName: 'review[rating]',
        readOnly: false,
        starOn: 'star-on.png',
        half: true,
        starType: 'img',
        click: function (score) {
            var picture_id = $(this).attr('picture_id');
            $.ajaxSetup({
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                }
            });
            $.ajax({
                type: 'POST',
                url: '/rating_pictures/',
                dataType: 'json',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
                },
                data: {
                    price_rate: score,
                    picture_id: picture_id,
                },
                success: function (data) {
                    alert(data.message);
                },
                error: function (data) {
                    alert(data.message);
                }
            });
        }
    });
    $('div#fa-show-picture').raty({
        path: '/assets/',
        number: 5,
        readOnly: true,
        score: function () {
            return $(this).attr('score');
        },
        scoreName: 'review[rating]',
        starOn: 'star-on.png',
        half: true,
        starType: 'img',
    });
</script>
